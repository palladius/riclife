<% form_for @friendship do |f| %>
  <%= f.error_messages %>
	<table border="0" width="100%" >
	<tr><td valign="top" >
		
  <p>
    <%= f.label      :Follower %><br />
		<%= collection_select("friendship", :person_id , Person.find_all_by_published(true, :order => "surname") , :id, :surname_name , :include_blank => true ) %>
  </p>
  <p>
    <%= f.label :tags %><br />
    <%= f.text_field :tags %>
  </p>
  <p>
    <%= f.label :importance %><br />
    <%= f.text_field :importance %>
  </p>
  <p>
    <%= f.label :visible %><br />
    <%= f.check_box :visible %>
  </p>
	</td>
	
	<td valign="top" >
	<p>
	    <%= f.label      :Followed %><br />
		<%= collection_select("friendship", :followed_id , Person.find_all_by_published(true, :order => "surname") , :id, :surname_name , :include_blank => true ) %>
	</p>

  <p>
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </p>

	</td></tr>
  </table>

  <p><%= f.submit %></p>
<% end %>
