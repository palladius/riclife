<h1>Listing hosts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Ip</th>
    <th>Notes</th>
    <th>Os</th>
  </tr>

<% for host in @hosts %>
  <tr>
    <td><%=h host.name %></td>
    <td><%=h host.ip %></td>
    <td><%=h host.notes %></td>
    <td><%=h host.os %></td>
    <td><%= link_to 'Show', host %></td>
    <td><%= link_to 'Edit', edit_host_path(host) %></td>
    <td><%= link_to 'Destroy', host, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

