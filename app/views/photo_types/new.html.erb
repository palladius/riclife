<h1>New photo_type</h1>

<%= error_messages_for :photo_type, :photo %>

<% form_for(@photo_type, :html => { :multipart => true}) do |f| %>
  <%#= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :active %><br />
    <%= f.check_box :active %>
  </p>
  <p>
		<%= label :photo_type, :photo %><br />
    <%= file_field_tag :photo_file %>
		<span>
			We accept Jpeg, Gif, Png up to 500 KB, please no GIF pero'!
		</span>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', photo_types_path %>