<h1>Editing photo_type</h1>

<% form_for(@photo_type) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :active %><br />
    <%= f.check_box :active %>
  </p>
	<p>
		<%= label :photo_type, :photo %><br />
    <%= file_field_tag :photo_file %>
		<span>
			We accept Jpeg, Png up to 500 KB
		</span>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @photo_type %> |
<%= link_to 'Back', photo_types_path %>